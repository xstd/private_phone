<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点但未按下时的背景图片 -->
    <item android:drawable="@drawable/block_indicator_unselected" android:state_enabled="true" android:state_focused="true" android:state_pressed="false"/>
    <!--选中时的图片背景-->
    <item android:state_selected="true" android:drawable="@drawable/block_indicator_selected" />
    <!-- 按下时的背景图片 -->
    <item android:drawable="@drawable/block_indicator_selected" android:state_enabled="true" android:state_pressed="true"/>
    <!-- 默认时的背景图片 -->
    <item android:drawable="@drawable/block_indicator_unselected"/>

</selector>