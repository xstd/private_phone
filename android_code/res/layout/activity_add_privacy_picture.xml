<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/ll_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/inbox_divider"
            style="@style/activity_divider"
            android:paddingLeft="10.0dip"
            android:text="@string/strongbox_image_inbox_divider"
            android:textSize="16.0sp" />

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:horizontalSpacing="6dp"
            android:listSelector="#00000000"
            android:numColumns="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/privacy_background_edit"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/add_pic"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:background="@drawable/private_comm_sms_send_selector"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/add_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_add"
                    android:gravity="center"
                    android:text="@string/s_hide_image_add"
                    android:textColor="#6B6B6B"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>