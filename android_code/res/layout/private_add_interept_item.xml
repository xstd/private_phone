<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contact"
    android:layout_width="match_parent"
    android:layout_height="70dip" 
    android:gravity="center_vertical"
    android:background="@drawable/private_comm_item_bkg_selector1">

    <ImageView
        android:id="@+id/interept_iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dip"
        android:visibility="gone"
        android:background="@drawable/private_comm_contact_icon_bkg" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/private_comm_pic_margin_right"
        android:layout_toRightOf="@id/interept_iv_pic"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/interept_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:textColor="#717171"
            android:textSize="16sp"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/private_comm_item_margin_bottom"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/interept_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/interept_tv_phone_num"
                style="@style/private_comm_item_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/interept_tv_phone_belong"
                style="@style/private_comm_item_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/interept_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dip"
        style="@style/scene_mode_checkbox_style"
        android:clickable="false"
        android:focusable="false"
       	android:layout_centerVertical="true" />

</RelativeLayout>