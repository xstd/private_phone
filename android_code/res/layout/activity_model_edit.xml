<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModelEditActivity" >

    <include
        android:id="@+id/layout_title"
        layout="@layout/private_comm_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:background="@color/private_comm_listview_bkg" >

        <LinearLayout
            android:id="@+id/ll_intercept_tab"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_uninterept"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_left_pressed"
                android:gravity="center"
                android:text="@string/private_comm_not_interept"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_interept"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_right_default"
                android:gravity="center"
                android:text="@string/private_comm_interept"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_interept"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/ll_intercept_tab"
            android:layout_marginBottom="55dip"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_unlock_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/private_comm_model_interept_contact"
                android:layout_marginLeft="18dip"
                android:textColor="@color/private_comm_title_text" />

            <RelativeLayout
                android:id="@+id/rl_add_all"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:clickable="true"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/btn_check_all"
                    style="@style/private_comm_checkbox_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView2"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:text="@string/private_comm_select_all" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_interept"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@color/private_comm_listview_line"
                android:dividerHeight="1dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_uninterept"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/ll_intercept_tab"
            android:layout_marginBottom="55dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_locked_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/private_comm_model_not_interept_contact"
                android:layout_marginLeft="18dip"
                android:textColor="@color/private_comm_title_text" />

            <RelativeLayout
                android:id="@+id/rl_uninterept_all"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:clickable="true"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/btn_uninterept"
                    style="@style/private_comm_checkbox_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView3"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:text="@string/private_comm_select_all" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_uninterept"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@color/private_comm_listview_line"
                android:dividerHeight="1dip" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/add_not_interept_btn"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/private_comm_btn_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="增加不拦截联系人"
                android:textColor="@color/sms_text_content_unseleted" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>