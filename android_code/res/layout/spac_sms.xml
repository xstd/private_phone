<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    
     <LinearLayout
        android:id="@+id/sms_ll_remove"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
         android:background="@drawable/private_comm_spacbtn_selector"
         android:orientation="horizontal"
         >

        <Button
            android:id="@+id/sms_bt_recover"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/private_comm_recover_contact"
            android:textColor="@color/sms_text_content_unseleted" />
        
         <Button
            android:id="@+id/sms_bt_delete"
           android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/private_comm_delete"
            android:textColor="@color/sms_text_content_unseleted" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sms_ll_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="51dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sms_tv_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/private_comm_select_privatecontact"
            android:gravity="center"
            android:textColor="@color/sms_text_content_seleted" />
        
        <ListView
            android:id="@+id/sms_lv_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent" />

        
    </RelativeLayout>

</RelativeLayout>