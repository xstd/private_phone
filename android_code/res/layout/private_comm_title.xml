<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dip"
    android:background="@drawable/private_comm_title_bkg"
    android:paddingBottom="10dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dip"
            android:background="@drawable/private_comm_backbtn_selector" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/private_comm_title_privatesms"
        android:textColor="#D7ECFF"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/private_comm_editbtn_selector"
            android:layout_marginRight="16dip"
            android:padding="5.0dip"
            android:textColor="@color/text_title_style_select_color" />

    </LinearLayout>

</LinearLayout>