<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="329dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/rs_create_album"
        android:textColor="#1D5A92"
        android:textSize="23sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1D5A92" />

    <EditText
        android:id="@+id/name"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:hint="@string/s_hide_image_dir_add_hint"
        android:inputType="text"
        android:textColorHint="#E1E1E1"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="9dp"
        android:background="#ACACAC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/privacy_space_lv_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="#4C4C4C"
            android:textSize="20sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ACACAC" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/privacy_space_lv_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@android:string/ok"
            android:textColor="#4C4C4C"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>