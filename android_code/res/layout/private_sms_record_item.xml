<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contact"
    android:layout_width="match_parent"
    android:layout_height="@dimen/private_comm_phone_item_height"
     android:background="@drawable/private_comm_item_bkg_selector" >

    <ImageView
        android:id="@+id/sms_iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dip"
        android:background="@drawable/private_comm_contact_icon_bkg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dip"
        android:layout_toRightOf="@+id/sms_iv_pic"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sms_tv_name"
                style="@style/private_comm_item_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明明" />

            <TextView
                android:id="@+id/sms_tv_count"
                style="@style/private_comm_item_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sms_tv_name"
                android:text=" (10)" />

            <TextView
                android:id="@+id/sms_tv_date"
                style="@style/private_comm_item_sms_date_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip"
                android:text="10/16 上午 11:20" />
        </RelativeLayout>

        <TextView
            android:id="@+id/sms_tv_content"
            style="@style/private_comm_item_content_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
             android:layout_marginRight="15dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="你好么" />
    </LinearLayout>

    <TextView
        android:id="@+id/sms_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>