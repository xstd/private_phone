<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >
    
    <include layout="@layout/private_comm_title"
        android:id="@+id/sms_detail_title"/> 


    <ListView
        android:id="@+id/sms_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sms_detail_title"
        android:layout_marginBottom="45dip" />

    <RelativeLayout
        android:id="@+id/sms_detail_buttom"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/private_comm_spac_sms_selector"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/et_send_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="75dip"
            android:layout_marginTop="5dip" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:layout_marginTop="5dip"
            android:paddingLeft="20dip"
            android:text="发送" />

    </RelativeLayout>

</RelativeLayout>