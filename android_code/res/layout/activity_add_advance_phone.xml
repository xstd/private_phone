<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/ll_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/select_callin_number"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_background"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/btn_diviter"
                    android:gravity="center"
                    android:text="@string/rs_select_callin_number"
                    android:textColor="#202020"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/s_image"
                    android:src="@drawable/btn_arrow" />
            </LinearLayout>

            <EditText
                android:id="@+id/callin_name"
                style="@style/text_input"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_weight="1"
                android:hint="@string/rs_callin_name"
                android:inputType="phone"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/callin_chenghu"
                style="@style/text_input"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_weight="1"
                android:hint="@string/rs_callin_chenghu"
                android:inputType="phone"
                android:paddingLeft="20dp" />

            <LinearLayout
                android:id="@+id/callin_time"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:background="@drawable/btn_background"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_ct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/btn_diviter"
                    android:gravity="center"
                    android:text="@string/rs_callin_time"
                    android:textColor="#202020"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/s_image"
                    android:src="@drawable/btn_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meet_time"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:background="@drawable/btn_background"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_mt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/btn_diviter"
                    android:gravity="center"
                    android:text="@string/rs_meet_time"
                    android:textColor="#202020"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/s_image"
                    android:src="@drawable/btn_arrow" />
            </LinearLayout>

            <EditText
                android:id="@+id/meet_location"
                style="@style/text_input"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:gravity="top|left"
                android:hint="@string/rs_meet_location"
                android:maxLines="2"
                android:minLines="2"
                android:paddingLeft="20dp" >
            </EditText>

            <EditText
                android:id="@+id/meet_why"
                style="@style/text_input"
                android:layout_width="310dp"
                android:layout_height="127dp"
                android:layout_marginTop="19dp"
                android:gravity="top|left"
                android:hint="@string/rs_meet_why"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/other"
                style="@style/text_input"
                android:layout_width="310dp"
                android:layout_height="127dp"
                android:layout_marginTop="19dp"
                android:gravity="top|left"
                android:hint="@string/rs_other"
                android:paddingLeft="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>