<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:background="@drawable/title_bg"
        android:gravity="center_vertical"
        android:paddingBottom="15dip"
        android:paddingTop="15dip" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_title_style_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/private_comm_addfrom_contact" />

        <Button
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/back_btn_selected"
            android:text="@string/private_comm_btn_back"
            android:textColor="@color/text_title_style_select_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/sms_ll_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/block_btn_selected"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="5dip" >

            <Button
                android:id="@+id/bt_sure"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/private_comm_btn_sure"
                android:textColor="@color/sms_text_content_unseleted" />

            <Button
                android:id="@+id/bt_cancle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/private_comm_btn_cancle"
                android:textColor="@color/sms_text_content_unseleted" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ListView
            android:id="@+id/lv_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            
            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/private_comm_no_contact"
                />
            
            
        </LinearLayout>
    </RelativeLayout>
   

</RelativeLayout>