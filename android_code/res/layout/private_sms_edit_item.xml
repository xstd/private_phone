<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contact"
    android:layout_width="match_parent"
     android:layout_height="70dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:id="@+id/sms_iv_inorout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/private_sms_read" />

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_marginLeft="10dip"
        android:orientation="horizontal"
            android:layout_toLeftOf="@+id/checkbox"
        android:layout_toRightOf="@+id/sms_iv_inorout" >

        <TextView
            android:id="@+id/sms_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10010" />

        <TextView
            
            
            android:id="@+id/sms_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/sms_tv_name"
            android:text="(10)" />

        <TextView
            android:id="@+id/sms_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="2013" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sms_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout1"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/sms_iv_inorout"
        android:text="nihao" />
    
    <CheckBox
        android:id="@+id/checkbox"
        style="@style/private_comm_checkbox_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        />
    
      <TextView
        android:id="@+id/tv_hidden_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

</RelativeLayout>