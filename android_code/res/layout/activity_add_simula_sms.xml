<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d_main_horspace"
    android:paddingRight="@dimen/d_main_horspace" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/s_image"
            android:src="@drawable/back_selector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/s_image"
            android:src="@drawable/line1" />

        <TextView
            android:id="@id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:gravity="center_vertical"
            android:text="@string/s_simulate_sms_header"
            android:textSize="@dimen/d_main_title_textsize" />
    </LinearLayout>

    <ImageView
        android:id="@id/sepator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/d_sepator_height"
        android:background="@color/c_dial_sepator"
        android:contentDescription="@string/s_image" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="@dimen/d_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop" >

                <EditText
                    android:id="@id/phoneNumber"
                    style="@style/text_input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/s_hint_phone"
                    android:inputType="phone" />

                <ImageView
                    android:id="@id/chooseContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:contentDescription="@string/s_image"
                    android:src="@drawable/btn_add_selector" />
            </FrameLayout>

            <Button
                android:id="@id/smsDate"
                android:layout_width="@dimen/d_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop"
                android:background="@drawable/choose_selector"
                android:gravity="left|center"
                android:paddingLeft="@dimen/d_btn_paddingLeft"
                android:textColor="@color/c_common_text" />

            <Button
                android:id="@id/smsTime"
                android:layout_width="@dimen/d_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop"
                android:background="@drawable/choose_selector"
                android:gravity="left|center"
                android:paddingLeft="@dimen/d_btn_paddingLeft"
                android:textColor="@color/c_common_text" />

            <EditText
                android:id="@id/smsContent"
                style="@style/text_input_full"
                android:layout_width="@dimen/d_view_width"
                android:layout_height="100.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop"
                android:gravity="top|left|center"
                android:hint="@string/s_hint_sms_content" />

            <LinearLayout
                android:id="@id/smsNotify"
                android:layout_width="@dimen/d_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop"
                android:background="@drawable/list_selector"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@id/smsNotifyCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@id/smsNotifyText"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/s_simulate_sms_notify"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/d_textsize_low" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/smsNotifyTitlePanel"
                android:layout_width="@dimen/d_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@id/smsNotifyTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s_simulate_sms_notify_title_text"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/d_textsize_low"
                    android:visibility="gone" />

                <EditText
                    android:id="@id/smsNotifyTitle"
                    style="@style/text_input_full"
                    android:layout_width="0.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:hint="@string/s_hint_sms_notify_title"
                    android:singleLine="true"
                    android:text="@string/s_default_sms_notify_title"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/smsNotifyContentPanel"
                android:layout_width="@dimen/d_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@id/smsNotifyContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s_simulate_sms_notify_content_text"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/d_textsize_low"
                    android:visibility="gone" />

                <EditText
                    android:id="@id/smsNotifyContent"
                    style="@style/text_input_full"
                    android:layout_width="0.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:hint="@string/s_hint_sms_notify_content"
                    android:singleLine="true"
                    android:text="@string/s_default_sms_notify_content"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@id/save"
                android:layout_width="@dimen/d_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_view_marginTop"
                android:background="@drawable/btn_long_selector"
                android:text="@string/s_save"
                android:textColor="@color/c_common_text" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>