<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@drawable/ll_title_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <TextView
            android:id="@+id/ll_return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ll_btn_back"
            android:gravity="center"
            android:paddingBottom="5.0dip"
            android:paddingLeft="11.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/ll_turn_back"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/ll_white" />
    </LinearLayout>

    <TextView
        android:id="@+id/ll_title_text"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4.0"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/ll_title_text"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/ll_white" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageView
            android:id="@+id/ll_toools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:scaleType="center"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>